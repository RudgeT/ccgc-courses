<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Blazor.HttpClient" Version="3.2.0-preview3.20168.3" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="3.1.8" />
    <PackageReference Include="Toolbelt.Blazor.HeadElement" Version="1.2.0" />
    <PackageReference Include="Toolbelt.Blazor.HeadElement.ServerPrerendering" Version="1.2.2" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Shared\GcWeb.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>GcWeb.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\Shared\Wet.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Wet.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Shared\GcWeb.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>GcWeb.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Shared\Wet.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Wet.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
